<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@drawable/backing_tracks_bg"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/ll_button"
        android:paddingBottom="@dimen/dimen10"
        android:layout_below="@+id/toolbar"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/dimen30">


                <com.musicapplication.views.imageView.CircleImageView
                    android:id="@+id/ci_user_edit"
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    android:layout_centerInParent="true"
                    android:src="@mipmap/user_icon" />

                <ImageView
                    android:id="@+id/iv_edit_image"
                    android:layout_width="@dimen/dimen30"
                    android:layout_height="@dimen/dimen30"
                    android:layout_alignBottom="@+id/ci_user_edit"
                    android:layout_alignRight="@+id/ci_user_edit"
                    android:layout_gravity="right"
                    android:layout_margin="9dp"
                    android:src="@mipmap/ic_round_camera"
                    android:scaleType="centerCrop"
                  />


            </RelativeLayout>

        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen30"

            android:layout_marginRight="@dimen/dimen30"
            android:layout_marginTop="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/dimen10"
                android:text="Name"
                android:textColor="@color/text_color"
                android:textSize="@dimen/txt_medium" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <EditText
                    android:id="@+id/edt_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@null"
                    android:inputType="textCapWords"
                    android:maxLength="35"
                    android:textColorHint="@color/white"

                    android:padding="@dimen/dimen5"
                    android:singleLine="true"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/txt_medium"
                  />


            </RelativeLayout>


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen1"
            android:layout_marginLeft="@dimen/dimen30"
            android:layout_marginRight="@dimen/dimen30"
            android:layout_marginTop="5dp"

            android:background="@color/divider_color"></View>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen30"

            android:layout_marginRight="@dimen/dimen30"
            android:layout_marginTop="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/dimen10"
                android:text="Email"
                android:textColor="@color/text_color"
                android:textSize="@dimen/txt_medium" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <EditText
                    android:id="@+id/edt_email_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@null"

                    android:textColorHint="@color/white"
                    android:inputType="textCapWords"
                    android:maxLength="35"
                    android:padding="@dimen/dimen5"
                    android:singleLine="true"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/txt_medium"
                     />


            </RelativeLayout>



        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen1"
            android:layout_marginLeft="@dimen/dimen30"

            android:layout_marginRight="@dimen/dimen30"
            android:layout_marginTop="5dp"
            android:background="@color/divider_color"></View>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen30"

            android:layout_marginRight="@dimen/dimen30"
            android:layout_marginTop="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/dimen5"

                android:text="Age"
                android:textColor="@color/text_color"
                android:textSize="@dimen/txt_medium" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <EditText
                    android:id="@+id/edt_age"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@null"
                    android:inputType="textCapWords"
                    android:maxLength="35"
                    android:padding="@dimen/dimen5"
                    android:singleLine="true"
                    android:textColorHint="@color/white"

                    android:textColor="@color/text_color"
                    android:textSize="@dimen/txt_medium"
                     />


            </RelativeLayout>


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen1"
            android:layout_marginLeft="@dimen/dimen30"
            android:layout_marginRight="@dimen/dimen30"
            android:layout_marginTop="5dp"
            android:background="@color/divider_color"></View>

        <TextView
            android:id="@+id/tv_e_countryId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/view2"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="@dimen/dimen30"
            android:layout_marginRight="@dimen/dimen30"
            android:layout_marginTop="5dp"
            android:background="@null"
            android:drawableRight="@mipmap/arrow_bottom_white"
            android:ems="10"
            android:inputType="textEmailAddress"
            android:padding="@dimen/dimen8"
            android:text="@string/country"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:textSize="@dimen/txt_medium" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/tv_countryId"
            android:layout_marginLeft="@dimen/dimen30"
            android:layout_marginRight="@dimen/dimen30"
            android:layout_marginTop="@dimen/dimen5"
            android:background="#ffffff"></View>


        <LinearLayout
            android:id="@+id/ll_country"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_countryId"
            android:layout_marginLeft="@dimen/dimen30"
            android:layout_marginRight="@dimen/dimen30"
            android:layout_marginTop="5dp">

            <TextView
                android:id="@+id/tv_e_stateId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginRight="@dimen/dimen10"
                android:layout_weight="1"
                android:background="@null"
                android:drawableRight="@mipmap/arrow_bottom_white"
                android:ems="10"
                android:padding="@dimen/dimen8"
                android:text="@string/state"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:textSize="@dimen/txt_medium" />

            <TextView
                android:id="@+id/tv_e_cityId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/view2"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="@dimen/dimen10"
                android:layout_weight="1"
                android:background="@null"
                android:drawableRight="@mipmap/arrow_bottom_white"
                android:ems="10"
                android:inputType="textEmailAddress"
                android:padding="@dimen/dimen8"
                android:text="@string/city"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:textSize="@dimen/txt_medium" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/view3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ll_country"
            android:layout_marginLeft="@dimen/dimen30"
            android:layout_marginRight="@dimen/dimen30"
            android:orientation="horizontal">

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginRight="@dimen/dimen10"
                android:layout_weight="1"
                android:background="#ffffff"></View>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="@dimen/dimen10"
                android:layout_weight="1"
                android:background="#ffffff"></View>
        </LinearLayout>


    </LinearLayout>


    <LinearLayout
        android:id="@+id/ll_button"
        android:layout_marginBottom="@dimen/dimen8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/dimen30"
        android:layout_marginRight="@dimen/dimen30">

        <Button
            android:id="@+id/btn_cancel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/white"
            android:background="@color/button_sky_blue"
            android:layout_marginRight="@dimen/dimen3"

            android:text="cancel" />

        <Button
            android:id="@+id/btn_save"
            android:layout_marginLeft="@dimen/dimen3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/white"
            android:background="@color/button_sky_blue"
            android:text="Save" />

    </LinearLayout>




</RelativeLayout>